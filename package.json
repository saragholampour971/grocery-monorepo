{
  "name": "grocery-repo",
  "type": "module",
  "scripts": {
    "build": "yarn turbo run build --filter=backend && concurrently 'yarn turbo run start --filter=backend' 'yarn turbo run build --filter=frontend'",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.10.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
